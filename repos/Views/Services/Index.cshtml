<div>
    @if (Model.Any())
    {
        <ul class="divided">

            @foreach (ServiceItem entity in Model)
            {
                <li>
                    <a  class="image left" asp-area="" asp-controller="Services" asp-action="Index" asp-route-id="@entity.Id">
                        <img  src="~/images/@entity.TitleImagePath" alt="" />
                    </a>
                    <h4> @entity.Title </h4>
                    <p>@entity.Subtitle</p>
                </li>
            }
        </ul>
       }
</div>
